# EditorConfig: единый стиль кода для редакторов
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,xml,yml,yaml,properties}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{json,gradle}]
indent_size = 2
